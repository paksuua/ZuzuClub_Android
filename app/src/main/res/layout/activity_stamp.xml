<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signup.StampActivity">

    <TextView
        style="@style/Title24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="도장 쾅!"
        android:textColor="@color/zuzu_black_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/a_stamp_iv_welcome_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stamp_img_welcome_stamp" />

    <TextView
        android:id="@+id/a_stamp_tv_welcome_zuzu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="방배동 살쾡이!\n주주클럽에 어서오세요!"
        android:textColor="@color/zuzu_orange"
        style="@style/SubTitle18Bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_stamp_iv_welcome_stamp" />


    <TextView
        android:id="@+id/a_stamp_tv_next"
        style="@style/SubTitle18"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@color/zuzu_orange"
        android:gravity="center"
        android:text="다음"
        android:textColor="@color/zuzu_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>