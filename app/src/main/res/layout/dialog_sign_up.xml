<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="207dp"
    android:background="@drawable/dialog_rounded_corner_16">

    <ImageView
        android:id="@+id/d_sign_up_iv_emotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/dialog_emotion_funny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/d_sign_up_tv_title"
        style="@style/Contents16Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="타이틀명"
        android:textColor="@color/zuzu_black_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/d_sign_up_iv_emotion" />

    <TextView
        android:id="@+id/d_sign_up_tv_content"
        style="@style/Contents14Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="안내 문구"
        android:textColor="@color/zuzu_black_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/d_sign_up_tv_title" />

    <View
        android:id="@+id/d_sign_up_v_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="24dp"
        android:background="@color/zuzu_coolgrey_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/d_sign_up_tv_content" />

    <TextView
        android:id="@+id/d_sign_up_tv_ok"
        style="@style/Contents16Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="확인"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:textColor="@color/zuzu_orange"
        app:layout_constraintTop_toTopOf="@id/d_sign_up_v_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>