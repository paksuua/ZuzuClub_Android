<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.intro.Intro1Fragment">

    <TextView
        android:id="@+id/f_intro1_tv_welcome_zuzu"
        style="@style/SubTitle18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="WELCOME TO 주주클럽!"
        android:includeFontPadding="false"
        android:textColor="@color/zuzu_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/f_intro1_iv_kosdaq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/intro_img_kosdaq_table"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/f_intro1_tv_welcome_zuzu" />

    <TextView
        android:id="@+id/f_intro1_tv_wild_market"
        style="@style/SubTitle18Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="야생 같은 험한 주식시장,\n어떻게 살아남을래?"
        android:textColor="@color/zuzu_coolgrey_80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_intro1_iv_kosdaq" />
</androidx.constraintlayout.widget.ConstraintLayout>