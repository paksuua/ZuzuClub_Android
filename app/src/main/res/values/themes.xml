<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZuzuClub_Android" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">false</item>
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <!-- Customize your theme here. -->
        <item name="android:indeterminateTint">#ff542b</item>
    </style>

    <style name="NicknameEditTextStyle">
        <item name="colorControlNormal">@color/zuzu_black_100</item>
        <item name="colorControlActivated">@color/zuzu_orange</item>
        <item name="android:textColor">@color/zuzu_black_100</item>
        <item name="android:textColorHint">@color/zuzu_orange</item>
        <item name="android:textCursorDrawable">@color/zuzu_black_100</item>
    </style>

    <style name="EditTextStyle">
        <item name="colorControlNormal">@color/zuzu_black_100</item>
        <item name="colorControlActivated">@color/zuzu_orange</item>
        <item name="android:textColor">@color/zuzu_black_100</item>
        <item name="android:textColorHint">@color/zuzu_black_50</item>
        <item name="android:textCursorDrawable">@color/zuzu_black_100</item>
    </style>

</resources>